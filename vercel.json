{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/chat.html",
      "dest": "/public/chat.html"
    },
    {
      "src": "/api/chat",
      "dest": "/api/chat.py"
    },
    {
      "src": "/api/email",
      "dest": "/api/email.py"
    },
    {
      "src": "/api/feedback",
      "dest": "/api/feedback.py"
    },
    {
      "src": "/api/confess",
      "dest": "/api/confess.py"
    }
  ]
}
